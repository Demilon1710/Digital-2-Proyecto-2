/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include "string.h"
#include "stdio.h"
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define deviceAddress 0x55
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
//Variables para facilitar el uso de texto en la programacion
uint8_t inicio[] = "Menu de Comunicacion HUART\r\n";
uint8_t press1[] = "Presione 1 para controlar el dispositivo SPI\r\n";
uint8_t press2[] = "Presione 2 para obtener la medicion del I2C\r\n";
uint8_t instruccion[] = "Indique con un numero entre 1 y 3 el LED que desea encender y, separado por una coma, la cantidad de ms que lo desee encendido empezando con ceros si es menor a 5 digitos hasta llenar los 5 digitos\r\n";
uint8_t inicioSPI[] = "Menu de Funcionamiento SPI\r\n";
uint8_t LED1[] = "1. Azul\r\n";
uint8_t LED2[] = "2. Amarillo\r\n";
uint8_t LED3[] = "3. Rojo\r\n";
uint8_t comando[1];
uint8_t subComando[7];
uint8_t diezmilesima = 0;
uint8_t milesima = 0;
uint8_t centena = 0;
uint8_t decena = 0;
uint8_t unidad = 0;
uint8_t subCmd = 0;
uint8_t TX_Buffer [] = "2";
uint8_t RX_Buffer [1];
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void transmit_uart(char *string){
	uint8_t len = strlen(string);
	HAL_UART_Transmit(&huart2, (uint8_t*) string, len, 200);
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_USART2_UART_Init();
  MX_I2C1_Init();
  /* USER CODE BEGIN 2 */

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  HAL_Delay(500);
	  //Transmitir el texto al monitor serial
	  HAL_UART_Transmit(&huart2, inicio, sizeof(inicio), 1000);
	  HAL_UART_Transmit(&huart2, press1, sizeof(press1), 1000);
	  HAL_UART_Transmit(&huart2, press2, sizeof(press2), 1000);
	  HAL_UART_Receive(&huart2, comando, sizeof(comando), HAL_MAX_DELAY); //Esperar hasta recibir una entrada en el monitor serial

	  if(comando[0] == '2'){ //ciclo para instrucciones al ingresar el numero 2
	      uint8_t pot[4] = {0};

	      TX_Buffer[0] = '2';
	      HAL_I2C_Master_Transmit(&hi2c1, (deviceAddress << 1), TX_Buffer, 1, HAL_MAX_DELAY);
	      HAL_Delay(50);

	      HAL_I2C_Master_Receive(&hi2c1, (deviceAddress << 1), pot, sizeof(pot), HAL_MAX_DELAY);

	      char buffer[10];
	      snprintf(buffer, sizeof(buffer), "%d", atoi((char*)pot)); //Intercambio de numero recibido a texto

	      HAL_UART_Transmit(&huart2, (uint8_t*)"Valor pot: ", 11, 100);
	      HAL_UART_Transmit(&huart2, (uint8_t*)buffer, strlen(buffer), 100); //Intercambio de texto a entero
	      HAL_UART_Transmit(&huart2, (uint8_t*)"\r\n", 2, 100);

	      HAL_Delay(2000);
	  }

	  if(comando[0] == '1'){ //Ciclo para instrucciones al ingresar el numero 1
		  HAL_UART_Transmit(&huart2, inicioSPI, sizeof(inicioSPI), 1000);
		  HAL_UART_Transmit(&huart2, instruccion, sizeof(instruccion), 1000);
		  HAL_UART_Transmit(&huart2, LED1, sizeof(LED1), 1000);
		  HAL_UART_Transmit(&huart2, LED2, sizeof(LED2), 1000);
		  HAL_UART_Transmit(&huart2, LED3, sizeof(LED3), 1000);

		  memset(subComando, 0, sizeof(subComando)); //Set para limpiar el dato

		  HAL_UART_Receive(&huart2, subComando, sizeof(subComando), HAL_MAX_DELAY); //Esperar hasta recibir un dato del teclado
		  if(subComando[0] == '1'){ //Ciclo para cuando el segundo comando sea un valor de LED diferente al inicio
			  subCmd = 1;
			  if(subComando[2] != '0'){ //A partir del tercer comando tomar valores diferentes a 0
				  diezmilesima = subComando[2] - '0';
			  }
			  if(subComando[2] == '0'){
				  diezmilesima = 0;
			  }
			  if(subComando[3] != '0'){
				  milesima = subComando[3] - '0';
			  }
			  if(subComando[3] == '0'){
				  milesima = 0;
			  }
			  if(subComando[4] != '0'){
				  centena = subComando[4] - '0';
			  }
			  if(subComando[4] == '0'){
				  centena = 0;
			  }
			  if(subComando[5] != '0'){
				  decena = subComando[5] - '0';
			  }
			  if(subComando[5] == '0'){
				  decena = 0;
			  }
			  if(subComando[6] != '0'){
				  unidad = subComando[6] - '0';
			  }
			  if(subComando[6] == '0'){
				  unidad = 0;
			  }
			  
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET); //Encender el pin de CHIP SELECT
			  HAL_SPI_Transmit(&hspi1, &subCmd, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &diezmilesima, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &milesima, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &centena, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &decena, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &unidad, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET); //Apagar el pin de CHIP SELECT

			  uint8_t menu = 0;
			  uint8_t resp = 0x00;

			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
			  HAL_SPI_TransmitReceive(&hspi1, &resp, &menu, 1, HAL_MAX_DELAY); //Transmitir el dato para indicar que se enviÃ³ el comando y recibir un nuevo valor para la otra variable
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

			  if (menu == 0xAA) { //Valor recibido para reiniciar el ciclo
			      subCmd = 0;
			      diezmilesima = milesima = centena = decena = unidad = 0;
			      continue;
			  }

		  }
		  if(subComando[0] == '2'){
			  subCmd = 2;
			  if(subComando[2] != '0'){
				  diezmilesima = subComando[2] - '0';
			  }
			  if(subComando[2] == '0'){
				  diezmilesima = 0;
			  }
			  if(subComando[3] != '0'){
				  milesima = subComando[3] - '0';
			  }
			  if(subComando[3] == '0'){
				  milesima = 0;
			  }
			  if(subComando[4] != '0'){
				  centena = subComando[4] - '0';
			  }
			  if(subComando[4] == '0'){
				  centena = 0;
			  }
			  if(subComando[5] != '0'){
				  decena = subComando[5] - '0';
			  }
			  if(subComando[5] == '0'){
				  decena = 0;
			  }
			  if(subComando[6] != '0'){
				  unidad = subComando[6] - '0';
			  }
			  if(subComando[6] == '0'){
				  unidad = 0;
			  }
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
			  HAL_SPI_Transmit(&hspi1, &subCmd, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &diezmilesima, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &milesima, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &centena, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &decena, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &unidad, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

			  uint8_t menu = 0;
			  uint8_t resp = 0x00;

			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
			  HAL_SPI_TransmitReceive(&hspi1, &resp, &menu, 1, HAL_MAX_DELAY);
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

			  if (menu == 0xAA) {
			      subCmd = 0;
			      diezmilesima = milesima = centena = decena = unidad = 0;
			      continue;
			  }

		  }
		  if(subComando[0] == '3'){
			  subCmd = 3;
			  if(subComando[2] != '0'){
				  diezmilesima = subComando[2] - '0';
			  }
			  if(subComando[2] == '0'){
				  diezmilesima = 0;
			  }
			  if(subComando[3] != '0'){
				  milesima = subComando[3] - '0';
			  }
			  if(subComando[3] == '0'){
				  milesima = 0;
			  }
			  if(subComando[4] != '0'){
				  centena = subComando[4] - '0';
			  }
			  if(subComando[4] == '0'){
				  centena = 0;
			  }
			  if(subComando[5] != '0'){
				  decena = subComando[5] - '0';
			  }
			  if(subComando[5] == '0'){
				  decena = 0;
			  }
			  if(subComando[6] != '0'){
				  unidad = subComando[6] - '0';
			  }
			  if(subComando[6] == '0'){
				  unidad = 0;
			  }
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
			  HAL_SPI_Transmit(&hspi1, &subCmd, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &diezmilesima, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &milesima, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &centena, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &decena, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_SPI_Transmit(&hspi1, &unidad, 1, HAL_MAX_DELAY);
			  HAL_Delay(2);
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

			  uint8_t menu = 0;
			  uint8_t resp = 0x00;

			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
			  HAL_SPI_TransmitReceive(&hspi1, &resp, &menu, 1, HAL_MAX_DELAY);
			  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

			  if (menu == 0xAA) {
			      subCmd = 0;
			      diezmilesima = milesima = centena = decena = unidad = 0;
			      continue;
			  }

		  }



	  }
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

